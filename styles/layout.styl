
/* global section
-------------------------------------------------- */

body
	color textColor
	if !!textColor2 && textColor != textColor2 && textColor2!='textColor2'
		color textColor2

	background-color backColor
	if !!backColor2 && backColor != backColor2 && backColor2!='backColor2'
		background-color backColor2

.backpage
	width 1280px
	position fixed
	left 0
	right 0
	top 0
	bottom 0
	margin 0 auto 
	z-index -100
	background-color pageBackColor

#pages-wrapper
	width 980px
	margin 0 auto

	.pages
		width inherit
		height 400px
		margin-bottom 600px
		border 1px solid gray 

#arcimage
	background-image url('images/archeader.png');
	background-position center top
	background-repeat no-repeat 
	position fixed
	left 0
	right 0
	top 0 
	height 300px
	z-index 100


 