
/* Products section
-------------------------------------------------- */

section.prd-container
	width 950px
	margin 0 auto
	span.prd-hover
		overflow hidden
		display block
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		color rgba(255,255,255,0.65)
		opacity 0
		z-index 2
		line-height 250px
		font-size 165px
		font-family 'Pacifico', cursive
		text-align left	//chon italic e zamani ke right mishe mizane biroon
		font-style italic
		padding-left 5px
		letter-spacing -5px
		background-color black
		border-radius 10px
		transition all 800ms ease-out

section.prd-container div > div
	height 202px
	width 202px
	float left
	margin-left 20px
	margin-top 20px
	border-radius 10px
	position relative

section.prd-container div > div:hover span
	opacity: 0.65;
	transition-duration: 500ms;