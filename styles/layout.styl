
/* global section
-------------------------------------------------- */

body
	color textColor
	if !!textColor2 && textColor != textColor2 && textColor2!='textColor2'
		color textColor2

	background-color backColor
	if !!backColor2 && backColor != backColor2 && backColor2!='backColor2'
		background-color backColor2

header
	position fixed
	width auto
	height 300px
	left 0
	top 0
	right 0
	z-index 100
	
	background-image url('images/archeader.png');
	background-position center top
	background-repeat no-repeat 

nav
	menu
		li
			color white
			a
				color inherit
				text-decoration none
				text-transform capitalize

#pages-wrapper
	width 1280px
	height pagesHeight * 7
	margin 0 auto
	background-color pageBackColor 
	
	.pages
		width inherit
		height pagesHeight
		border 1px dashed red
		/*
		left 0
		right 0
		margin 0 auto
		*/
		
		&.active
			border-style solid
			
		.spacer
			height 220px


